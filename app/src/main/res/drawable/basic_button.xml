<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/blue_button_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/blue_button_pressed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/blue_button" />
            <stroke
                android:width="1dp"
                android:color="@color/blue_button" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>